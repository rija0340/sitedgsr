{% block content %}

 <div class="service-area bg2 sp">
  <div class="container">
   <div class="section-title">
    <h2>Nos Services</h2>
    <!-- <p>Malesuada fames ac turpis egestas. Vestibulum tortor quam, feugiat vitae.</p> -->
  </div>
  <div class="row">
    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6 single-service text-center ">
      <div class="inner p-3 ">
       <div class="icon">
        <i class="fa fa-taxi"></i>
      </div>
      <p class="m-0">Visite Technique</p>
      <div class="content">
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-6 col-sm-6 col-xs-6  single-service text-center">
   <div class="inner p-3">
     <div class="icon">
      <i class="fa fa-car"></i>
    </div>
    <p class="m-0">Réception Technique</p>
    <div class="content">
    </div>
  </div>
</div>
<div class="col-lg-3 col-md-6 col-sm-6 col-xs-6  single-service text-center">
 <div class="inner p-3">
   <div class="icon">
    <i class="fa fa-bus"></i>
  </div>
  <p class="m-0">Constatation avant Dédouanement </p>
  <div class="content">
  </div>
</div>
</div>
<div class="col-lg-3 col-md-6 col-sm-6 col-xs-6  single-service text-center">
 <div class="inner p-3">
   <div class="icon">
    <i class="fa fa-truck"></i>
  </div>
  <p class="m-0">Controle inopiné </p>
  <div class="content">
  </div>
</div>
</div>

</div>
</div>
</div>

<div class="about-area sp m-0 p-0 text-center">
  <iframe src="{{ spot }}" onload='javascript:(function(o){o.style.height=o.contentWindow.document.body.scrollHeight+"px";}(this));' ></iframe>
</div>

{# section actualites #}
<div class="testimonial-area bg2 sp">
  <div class="container">
    <div class="testimonial-slider">
      {% for actualite in actualites %}
        <div class="single-slide  p-0 m-0">
          <div class="single-portfolio m-0 p-0">
            <div class="inner">

              <div class="portfolio-img" style="height:200px; object-fit : cover !important">
                {% set i = 0 %} {# initialisation de i pour le compteur #}
                  {% for attachement in attachements %}  
                    {% if actualite == attachement.actualite %} {# verifier si attachement correspond à curent actualite #}
                      {% if i == 0 %} {# on veut juste afficher la première image #}
                        <img src="{{vich_uploader_asset(attachement, 'imageFile')  }}" alt="">
                      {% endif %}
                      {%  set i = i + 1 %}
                    {% endif %}
                  {% endfor %}
   {#                <div class="hover-content">
                    <div>
                      <a class="js-actu_show button " id="actu-{{ actualite.id }}"  href="{{ path('actualite.show', { id : actualite.id }) }}">
                        Voir
                      </a>
                    </div>
                  </div> #}
                </div>
                <div class="portfolio-content titre_actu">
                  {# <h5>{{ actualite.title}}</h5> #}
                  <h5 style="height: 38px">{{ actualite.title | length > 60 ? actualite.title  |slice(0, 60) ~ '...' : actualite.title   }}</h5>
                  <span>{{ actualite.datePub | date('d-m-Y')}}</span>
                </div>
              </div>
            </div>
          </div>  
        {% endfor %}               
      </div>
    </div>
    <div class="text-center btn_liste_actu">
      <a href="{{ path('actualites') }}" class="button">Voir toutes les actualités</a>
    </div> 
  </div>
  {# fin section actualites #}



</div>
</div>
</div>
</div>
</div>

{%endblock%}
