
{% extends "base.html.twig" %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{ asset( 'css/gallerie_video.css')}}">

	{%endblock%}
	{% block title %}Galerie Vid√©o {% endblock %}

		{% block content %}
			{% include 'layouts/couverture.html.twig' %} 
			<div class="row mt-5">
				{% for actualite in actualites %}
					{% if actualite.urlVideo != null %}
						<div class="col-lg-4 col-md-4 col-sm-6">
							
							<div class="card mdl-shadow--3dp">
								<div class=" video_title p-1" >

									<div class="divWrapper">
										<div class="tx">{{actualite.title}}</div>
										
									</div>
								</div>
								<div class="d-flex justify-content-center">
									<div>
										<em>{{ actualite.datePub | date("d M Y")}}</em>	
									</div>
								</div>
								<div style="height:15em;">
									<iframe class="rounded" 
									src = "https://www.youtube.com/embed/{{ actualite.urlVideo }}"
									frameborder="0"
									title="Example2"
									allowfullscreen
									width="100%"
									height = "100%"
									></iframe>
								</div>
							</div>

						</div>
					{% endif %}
				{% endfor %}
			</div>

			{%endblock%}

			{% block javascripts %}
			{% endblock %}