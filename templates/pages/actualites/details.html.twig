{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/details_actualite.css') }}">
	<link rel="stylesheet" href="{{ asset('css/from_khobor_template/plugins.css') }}">
	<link rel="stylesheet" href="{{ asset('css/from_khobor_template/custom_style.css') }}">
{% endblock %}
{% block title %}Details actualité
{% endblock %}
{% block content %}
	{# {% include 'layouts/couverture.html.twig' %} #}

	{# {{dump(actualite.attachements[0].image)}} #}
		<div class="container mt-5"> <div class="post post-overlay life-style-post post-separator-border">
			<div
				class="post-wrap">
				{# on veut juste afficher la première image #}
				<div class="image"><img src="../../../uploads/images/actualite/{{actualite.attachements[0].image}}" alt="" width="300" height="300" style="object-fit : cover"></div>
				<!-- Content -->
				<div
					class="content">

					<!-- Title -->
					<h1 class="title" style="font-size : 28px ">
						<a href="">{{actualite.title}}</a>
					</h1>

					<!-- Meta -->
					<div class="meta fix">
						<span class="meta-item date">
							<i class="fa fa-clock-o"></i>
							{{ actualite.datePub | date('d-m-Y')}}</span>
					</div>
				</div>

			</div>
		</div>

		<div class="card p-5">
			<div class="row">
				<div class="col-md-6 text-justify">
					{{actualite.content|raw}}
				</div>
				<div class="col-md-6">
					<img src="../../../uploads/images/actualite/{{actualite.attachements[1].image}}" alt="">
					{% if actualite.content|raw|length > 1200 %}
						<div class="mt-3">
							<img src="../../../uploads/images/actualite/{{actualite.attachements[2].image}}" alt="">
						</div>

					{% endif %}

				</div>
			</div>
		</div>

		<div class="about-area">
			<div class="about-content">
				<h3>
					<i class="fa fa-thumbs-up"></i>
					Vous pourriez aussi aimer</h3>
			</div>
		</div>
		{# autres actualites #}
		<div class="row">
			{% for actu in actualites|slice(0, 4) %}{% endfor %}
		</div>
	</div>
	<div class="testimonial-area ">
		<div class="container">
			<div class="testimonial-slider">
				{% for actu in actualites|slice(0, 5) %}
					{% if actu.datePub | date('d-m-Y') != actualite.datePub | date('d-m-Y') %}
						<div class="single-slide p-0">
							<div class="post post-overlay hero-post">
								<div
									class="post-wrap">
									<!-- Image -->
									<div class="image"><img src="../../../uploads/images/actualite/{{actu.attachements[0].image}}" alt="post"></div>
									<!-- Content -->
									<div
										class="content">
										<!-- Title -->
										<h4 class="title">
											<a href="{{path('actualite_details', {'id' : actu.id })}}">{{actu.title}}</a>
										</h4>
										<!-- Meta -->
										<div class="meta fix">
											<span class="meta-item date">
												<i class="fa fa-clock-o"></i>
												{{ actu.datePub | date('d-m-Y')}}</span>
										</div>
									</div>
								</div>
							</div>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="{{asset('js/from_khobor/popper.min.js')}}"></script>
	<script src="{{asset('js/from_khobor/plugins.js')}}"></script>
{% endblock %}
